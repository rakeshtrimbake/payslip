<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400&display=swap" rel="stylesheet">
    <style>
        *{
            margin: 0;
        }
        .avv{
          display: flex;
        }
        body{
            padding: 0px 40px;
            font-size: 20px;
            padding-top: -50px !important;
            font-family: 'Roboto', sans-serif;
            color:rgb(93, 95, 95);
           
            
        }
      table {
        width: 100%;
        table-layout:fixed;
        padding-bottom: 25px;
      }
      td > span {
          color: green !important;
          
      }
      td {
        word-wrap:break-word;
        padding: 10px 2px;
        
      }
      td > b {
        color: rgb(46, 48, 48) !important;
      }
      td > h3 {
        color: white !important;
        padding-left: 35px;
        padding-top: 7px;
        padding-bottom: 7px;
        border-radius: 20px !important;
        border-collapse: separate;
      }
     hr{
         border: 1px solid  rgb(138, 134, 134);
     }
      tr{
          padding: 14px;
      }
      p {
        font-family: sans-serif;
        font-size: 30px !important;
        padding-bottom: 8px;
        font-weight: 800;
        border-bottom: 2px solid rgb(138, 134, 134);
        color: rgb(108, 112, 112) !important;
      }
      td > p{
          color: rgb(14, 168, 84) !important;
          padding-bottom: 0px !important;
      }
      td > strong {
          font-size: 30px;
          font-family: sans-serif;
          color:rgb(108, 112, 112) !important;
      }

      table > tr > td > img {
        height: 200px;
        width: auto;
      }
      .header__monthly{
          padding: 20px 0px;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <table>
        <tr>
          <td width="60%">
            <img
              src="data:image/png;base64,"
              alt=""
            />
          </td>
          <td align="right" width="40%">Report from <%=reports.ledger.information.pay_cycle%></td>
        </tr>
      </table>
    </div>
    <div>
      <p>Your monthly salary slip</p><br>

      <table>
        <tr class="header__monthly">
          <td width="55%">
           <strong>$<%=reports.ledger.information.salary.toLocaleString(
            undefined,
            { minimumFractionDigits: 0 }
          ).replace(/,/g, '.')%></strong> /month
          </td>
          <td width="25%">Employee Name</td>
          <td align="right" width="20%"><%=reports.ledger.information.name%></td>
        </tr>
        <tr class="header__monthly">
          <td align="right" width="55%"></td>
          <td align="left" width="25%">Employee Type</td>
          <td align="right" width="20%"><%=reports.ledger.information.worker_type%></td>
        </tr>
        <tr class="header__monthly">
          <td width="55%">
            The playslip is generated on
            <%= moment().format('Do MMMM, YYYY'); %>
          </td>
          <td width="25%">Phone Number</td>
          <td align="right" width="20%"><%=reports.ledger.information.phone_number%></td>
        </tr>
      </table>
      <table style="padding-bottom: 0px !important;">
          <tr>
              <td width="55%">
                <strong>Payment and Salary</strong>
                  
              </td>
              <td width="45%">
                 <strong style="margin-left:50px;">Gaji Bersih: <span>Rp <%=reports.ledger.salary.net_payable.toLocaleString(
                  undefined,
                  { minimumFractionDigits: 0 }
                ).replace(/,/g, '.')%></span> </strong> 
              </td>
          </tr> 
      </table>
      <hr>
      <% let salary = 0; %>
      <% let payment = 0; %>
      <table class="transaction">
        <tr class="header__monthly">
          <td align="left" color="red" width="30%"><b>TRANSACTION DATE</b> </td>
          <td align="left" width="55%"><b> ACTIVITY DESCRIPTION</b></td>
          <td align="right" width="20%"><b>AMOUNT</b> </td>
        </tr>
        <tr  bgcolor="#ccffff">
          <td align="left" width="30%">GAJI</td>
          <td align="left" width="55%"></td>
          <td align="left" width="20%"></td>
        </tr>
        <tr>
          <td align="left" width="30%"></td>
          <td align="left" width="30%">Total salary</td>
          <% salary += reports.ledger.salary.total_salary_owed_number %>
          <td align="right" width="40%"><%=reports.ledger.salary.total_salary_owed_number.toLocaleString(
            undefined,
            { minimumFractionDigits: 0 }
          ).replace(/,/g, '.')%></td>
        </tr>
        

        <% reports.ledger.salary.salary_ledger.forEach((report,index) => {%>
            
            
        <tr class="header__monthly">
          <td align="left" width="30%"><%=report.date%></td>
          <td align="left" width="55%"><%=report.description%></td>
          <td align="right" width="20%">
            <% if(report.ledger_type  == "Addition"){ %>
              <% salary += report.amount %> 
              <span style="color: green !important;">Rp <%=report.amount.toLocaleString(
                undefined,
                { minimumFractionDigits: 0 }
              ).replace(/,/g, '.')%></span>
          <% } else{ %>  
              <% salary -= report.amount %> 
              <span style="color: red !important;">Rp <%=report.amount.toLocaleString(
                undefined,
                { minimumFractionDigits: 0 }
              ).replace(/,/g, '.')%></span>
          <% } %>
             </td>
        </tr>
        <% });%>
        <tr>
          <td align="center" width="30%"></td>
          <td style="color: rgb(46, 48, 48) !important;" align="left" width="55%">Gaji Total</td>
          <td style="color: rgb(46, 48, 48) !important;" align="right" width="20%"><span>Rp <%=salary.toLocaleString(
            undefined,
            { minimumFractionDigits: 0 }
          ).replace(/,/g, '.')%></span> </td>
      </tr>
      </table>
      <table>
        <tr bgcolor="#ccffff">
            <td align="left" width="30%">PEMBAYARAN</td>
            <td align="right" width="55%"></td>
            <td align="right" width="20%"></td>
          </tr>
          <% reports.ledger.salary.payments_ledger.forEach((report,index) => {%>
            
          <tr class="header__monthly">
            <td align="left" width="30%"><%=report.date%></td>
            <td align="left" width="55%"><%=report.description%></td>
            <td align="right" width="20%">
              <span>Rp <%=report.amount.toLocaleString(
              undefined,
              { minimumFractionDigits: 0 }
            ).replace(/,/g, '.')%></span> </td>
          </tr>
          
        <% });%>
      </table>
      <table>
        <tr>
            <td align="center" width="30%"></td>
            <td style="color: rgb(46, 48, 48) !important;" align="left" width="55%">Total</td>
            <td style="color: rgb(46, 48, 48) !important;" align="right" width="20%"><span>Rp <%=payment.toLocaleString(
              undefined,
              { minimumFractionDigits: 0 }
            ).replace(/,/g, '.')%></span> </td>
        </tr>
    </table>
    <p style="padding-top:13%;">Attendance Summary</p><br>
    
      <table style="padding-bottom: 0px !important;">
      <tr>
        <td width="10%"></td>
        <td style="background-color: #66ff66;border-radius: 20px !important;" width="10%"><h3 "><%=reports.ledger.attendance.present_days%></h3></td>
        <td width="10%"></td>
        <td style="background-color: #ffd633;border-radius: 20px !important;" width="10%"><h3><%=reports.ledger.attendance.half_days%></h3></td>
        <td width="10%"></td>
        <td style="background-color: #ff4d4d;border-radius: 20px !important;" width="10%"><h3><%=reports.ledger.attendance.absent_days%></h3></td>
        <td width="10%"></td>
        <td style="background-color: #0040ff;border-radius: 20px !important;" width="10%"><h3><%=reports.ledger.attendance.paid_holidays%></h3></td>
        <td width="10%"></td>
        </tr>
    </table>
    <table style="padding:0px 60px;">
        
      <tr>
        <td align="center" style="font-size: medium;" width="25%"><h4 >Present</h4></td>    
        <td align="center" style="font-size: medium;" width="25%"><h4>Half Day</h4></td></td>
        <td  align="center" style="font-size: medium;" width="25%"><h4 >Absent</h4></td>
        <td align="center"  style="font-size: medium;" width="25%"><h4 >Holidays</h4></td> 
    </tr>
    </table>
      <table style="align-items: center;text-align: center;" width="40%">
          <br>
        <tr>
            <td style="color: rgb(63, 61, 61);" align="center" width="40%">DATE</td>
            <td style="color: rgb(63, 61, 61);" align="center" width="20%">HOURS</td>
            <td style="color: rgb(63, 61, 61);" align="center" width="40%">ATTENDANCE</td>
          </tr>
  
          <% reports.ledger.attendance_details.forEach((report,index) => {%>
             
          <tr class="header__monthly">
            <td align="center" width="30%"><%=report.date%></td>
            <td align="center" width="30%"><%=report.hours_worked%></td>
            <td align="center" width="40%"><span><%=report.attendance_type%></span> </td>
          </tr>
          <% });%>
      </table>
    </div>
  </body>
</html>
